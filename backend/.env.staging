# Staging Environment Configuration
# Copy this file and customize for your staging environment

NODE_ENV=staging
PORT=5000

# Database - Use separate staging database
MONGODB_URI=mongodb://localhost:27017/trade-ai-staging

# Authentication
JWT_SECRET=staging-jwt-secret-change-in-production
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=staging-refresh-secret-change-in-production
JWT_REFRESH_EXPIRE=30d

# Email - Use test/sandbox mode
EMAIL_FROM=noreply@staging.trade-ai.com
EMAIL_FROM_NAME=Trade AI Staging

# Security
CORS_ORIGINS=http://localhost:3000,https://staging.tradeai.gonxt.tech
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=200

# Logging - More verbose for staging
LOG_LEVEL=debug
LOG_FILE=./logs/staging.log

# Error Tracking
SENTRY_ENABLED=true
SENTRY_ENVIRONMENT=staging
SENTRY_TRACES_SAMPLE_RATE=0.5

# Feature Flags for Staging
FEATURE_AI_INSIGHTS=true
FEATURE_ML_PREDICTIONS=true
FEATURE_EXTERNAL_INTEGRATIONS=false

# Staging-specific settings
SEED_ON_STARTUP=false
ENABLE_DEBUG_ROUTES=true
