# TRADEAI Backend Production Environment Configuration
# ==================================================
# This file contains production environment variables for the backend service
# Replace placeholder values with your actual production settings

# Server Configuration
NODE_ENV=production
PORT=5000
HOST=0.0.0.0

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=tradeai_db
DB_USER=tradeai_user
DB_PASSWORD=your_secure_db_password_here

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Encryption
ENCRYPTION_KEY=your_encryption_key_here

# Email Configuration (Configure with your SMTP provider)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here
FROM_EMAIL=noreply@tradeai.com
FROM_NAME=TRADEAI Platform

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/app/uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,xls,xlsx,ppt,pptx,txt,csv

# API Configuration
API_VERSION=v1
API_PREFIX=/api
CORS_ORIGIN=http://your_server_ip_here:3000

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=your_session_secret_here
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/backend.log

# External API Configuration (if needed)
EXTERNAL_API_KEY=your_external_api_key_here
EXTERNAL_API_URL=https://api.external-service.com

# Company Configuration
DEFAULT_COMPANY_NAME=GONXT
DEFAULT_COMPANY_DOMAIN=gonxt.com

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_NOTIFICATIONS=true
ENABLE_FILE_UPLOAD=true
ENABLE_EMAIL_VERIFICATION=true

# Backup Configuration
BACKUP_RETENTION_DAYS=30
AUTO_BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *

# Monitoring Configuration
HEALTH_CHECK_INTERVAL=30000
METRICS_ENABLED=true

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Timezone
TZ=UTC