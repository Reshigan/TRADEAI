# Trade AI Platform - Production Environment Configuration
# IMPORTANT: Update all passwords, secrets, and URLs before deployment

# MongoDB Configuration
MONGO_USERNAME=tradeai_admin
MONGO_PASSWORD=CHANGE_THIS_SECURE_PASSWORD_123!
MONGO_DATABASE=trade_ai_production
MONGODB_URI=mongodb://tradeai_admin:CHANGE_THIS_SECURE_PASSWORD_123!@trade-ai-mongodb:27017/trade_ai_production?authSource=admin

# Redis Configuration
REDIS_HOST=trade-ai-redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD_456!
REDIS_DB=0

# JWT Configuration - CRITICAL: Change these secrets before production
JWT_SECRET=CHANGE_THIS_EXTREMELY_SECURE_JWT_SECRET_KEY_789_PRODUCTION
JWT_EXPIRES_IN=8h
JWT_REFRESH_SECRET=CHANGE_THIS_EXTREMELY_SECURE_REFRESH_SECRET_KEY_ABC_PRODUCTION
JWT_REFRESH_EXPIRES_IN=7d

# API Configuration
NODE_ENV=production
PORT=5000
LOG_LEVEL=info
SECURITY_LOG_LEVEL=warn
CORS_ORIGIN=https://your-domain.com

# Email Configuration (Update with your SMTP provider)
EMAIL_PROVIDER=smtp
EMAIL_FROM=noreply@your-domain.com
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=your-smtp-username
SMTP_PASS=your-smtp-password

# SendGrid Configuration (Alternative to SMTP)
SENDGRID_API_KEY=SG.your-sendgrid-api-key-here
SENDGRID_WELCOME_TEMPLATE=d-your-template-id
SENDGRID_RESET_PASSWORD_TEMPLATE=d-your-template-id
SENDGRID_APPROVAL_TEMPLATE=d-your-template-id
SENDGRID_NOTIFICATION_TEMPLATE=d-your-template-id

# SAP Integration (Update with your SAP details)
SAP_BASE_URL=https://your-sap-server.com
SAP_USERNAME=your-sap-username
SAP_PASSWORD=your-sap-password
SAP_CLIENT=100
SAP_LANGUAGE=EN
SAP_SYNC_INTERVAL=0 2 * * *

# Client URL
CLIENT_URL=https://your-domain.com

# File Upload
UPLOAD_DIR=/app/uploads
TEMP_DIR=/app/temp

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Security
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
SESSION_SECRET=CHANGE_THIS_SESSION_SECRET_XYZ_PRODUCTION

# Multi-tenant Configuration
COMPANY_ISOLATION=true
DEFAULT_COMPANY=GONXT

# AI Services Configuration
AI_MODEL_API_KEY=your-openai-api-key-here
AI_SERVICE_URL=http://trade-ai-ai-services:8000

# Monitoring Configuration
MONITORING_URL=http://trade-ai-monitoring:8080
RETENTION_DAYS=90
SYSTEM_CHECK_INTERVAL=60
SERVICE_CHECK_INTERVAL=300

# Build Configuration
CACHEBUST=1
BUILD_DATE=2025-09-12