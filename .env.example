# TRADEAI Environment Configuration
# Copy this file to .env and update the values

# ===========================================
# BASIC CONFIGURATION
# ===========================================
NODE_ENV=production
LOG_LEVEL=info

# ===========================================
# SERVER CONFIGURATION
# ===========================================
# Domain configuration (replace with your actual domain)
DOMAIN=your-domain.com
SERVER_IP=your.server.ip.address

# Port configuration (internal Docker ports)
BACKEND_PORT=5000
FRONTEND_PORT=80
AI_SERVICES_PORT=8000
MONITORING_PORT=8080

# External ports (what users connect to)
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# MongoDB (Change these passwords!)
MONGO_USERNAME=admin
MONGO_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE
MONGO_DATABASE=tradeai

# Redis (Change this password!)
REDIS_PASSWORD=CHANGE_ME_STRONG_REDIS_PASSWORD

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
# JWT Secrets - CRITICAL: Generate strong secrets!
# Run: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=GENERATE_64_CHAR_SECRET_WITH_CRYPTO_RANDOM_BYTES
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=GENERATE_DIFFERENT_64_CHAR_SECRET_FOR_REFRESH  
JWT_REFRESH_EXPIRES_IN=7d

# ===========================================
# API CONFIGURATION
# ===========================================
# CORS Configuration
CORS_ORIGIN=*

# API URLs (for frontend)
REACT_APP_API_URL=/api
REACT_APP_SOCKET_URL=
REACT_APP_AI_API_URL=/ai
REACT_APP_MONITORING_URL=/monitoring

# ===========================================
# AI/ML CONFIGURATION
# ===========================================
# OpenAI API Key (optional, for advanced AI features)
AI_MODEL_API_KEY=your_openai_api_key_here

# ===========================================
# EMAIL CONFIGURATION (Optional)
# ===========================================
EMAIL_FROM=noreply@tradeai.gonxt.tech
SENDGRID_API_KEY=your_sendgrid_api_key_here

# ===========================================
# MONITORING CONFIGURATION
# ===========================================
RETENTION_DAYS=30
SYSTEM_CHECK_INTERVAL=60
SERVICE_CHECK_INTERVAL=300

# ===========================================
# SSL CONFIGURATION
# ===========================================
# Set to true if you have SSL certificates
SSL_ENABLED=false
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# ===========================================
# BACKUP CONFIGURATION (Optional)
# ===========================================
# AWS S3 for backups
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=tradeai-backups

# ===========================================
# CACHE BUSTING
# ===========================================
CACHEBUST=1