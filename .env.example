# Trade AI Platform Environment Configuration
# Copy this file to .env and update the values as needed

# MongoDB Configuration
MONGO_USERNAME=admin
MONGO_PASSWORD=secure_password_here
MONGO_DATABASE=trade_ai

# Redis Configuration
REDIS_PASSWORD=secure_redis_password_here

# JWT Configuration
JWT_SECRET=your_extremely_secure_and_long_jwt_secret_key_here
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=your_extremely_secure_and_long_jwt_refresh_secret_key_here
JWT_REFRESH_EXPIRES_IN=7d

# API Configuration
NODE_ENV=production
LOG_LEVEL=info
SECURITY_LOG_LEVEL=info
CORS_ORIGIN=https://trade-ai.com

# Frontend Configuration
REACT_APP_API_URL=https://trade-ai.com/api
REACT_APP_SOCKET_URL=https://trade-ai.com
REACT_APP_AI_API_URL=https://trade-ai.com/ai
REACT_APP_MONITORING_URL=https://trade-ai.com/monitoring

# AI Services Configuration
AI_MODEL_API_KEY=your_openai_api_key_here

# Monitoring Configuration
RETENTION_DAYS=30
SYSTEM_CHECK_INTERVAL=60
SERVICE_CHECK_INTERVAL=300

# Build Configuration
CACHEBUST=1