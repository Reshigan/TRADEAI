# TRADEAI Environment Configuration
# Copy this file to .env and update the values

# ===========================================
# BASIC CONFIGURATION
# ===========================================
NODE_ENV=production
LOG_LEVEL=info

# ===========================================
# SERVER CONFIGURATION
# ===========================================
# Domain configuration
DOMAIN=tradeai.gonxt.tech
SERVER_IP=13.247.139.75

# Port configuration (internal Docker ports)
BACKEND_PORT=5000
FRONTEND_PORT=80
AI_SERVICES_PORT=8000
MONITORING_PORT=8080

# External ports (what users connect to)
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# MongoDB
MONGO_USERNAME=admin
MONGO_PASSWORD=TradeAI_Mongo_2024!
MONGO_DATABASE=tradeai

# Redis
REDIS_PASSWORD=TradeAI_Redis_2024!

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
# JWT Secrets (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=TradeAI_JWT_Super_Secret_Key_2024_Change_This_In_Production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=TradeAI_JWT_Refresh_Super_Secret_Key_2024_Change_This_Too
JWT_REFRESH_EXPIRES_IN=7d

# ===========================================
# API CONFIGURATION
# ===========================================
# CORS Configuration
CORS_ORIGIN=*

# API URLs (for frontend)
REACT_APP_API_URL=/api
REACT_APP_SOCKET_URL=
REACT_APP_AI_API_URL=/ai
REACT_APP_MONITORING_URL=/monitoring

# ===========================================
# AI/ML CONFIGURATION
# ===========================================
# OpenAI API Key (optional, for advanced AI features)
AI_MODEL_API_KEY=your_openai_api_key_here

# ===========================================
# EMAIL CONFIGURATION (Optional)
# ===========================================
EMAIL_FROM=noreply@tradeai.gonxt.tech
SENDGRID_API_KEY=your_sendgrid_api_key_here

# ===========================================
# MONITORING CONFIGURATION
# ===========================================
RETENTION_DAYS=30
SYSTEM_CHECK_INTERVAL=60
SERVICE_CHECK_INTERVAL=300

# ===========================================
# SSL CONFIGURATION
# ===========================================
# Set to true if you have SSL certificates
SSL_ENABLED=false
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# ===========================================
# BACKUP CONFIGURATION (Optional)
# ===========================================
# AWS S3 for backups
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=tradeai-backups

# ===========================================
# CACHE BUSTING
# ===========================================
CACHEBUST=1